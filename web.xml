<?xml version="1.0"?>
<web-app>
<display-name>falcon-contest</display-name>
<description>Programming Contest system</description>

<resource-ref>
	<description>DB Connection</description>
	<res-ref-name>jdbc/contestDB</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
</resource-ref>

<servlet>
 <servlet-name>config</servlet-name>
 <servlet-class>dragonfin.ConfigServlet</servlet-class>
</servlet>

<servlet>
 <servlet-name>core</servlet-name>
 <servlet-class>dragonfin.CoreServlet</servlet-class>
</servlet>

<servlet>
 <servlet-name>login</servlet-name>
 <servlet-class>dragonfin.LoginServlet</servlet-class>
</servlet>

<servlet>
 <servlet-name>menu</servlet-name>
 <servlet-class>dragonfin.MenuServlet</servlet-class>
</servlet>

<servlet-mapping>
 <servlet-name>config</servlet-name>
 <url-pattern>/config</url-pattern>
</servlet-mapping>

<servlet-mapping>
 <servlet-name>core</servlet-name>
 <url-pattern>/core</url-pattern>
</servlet-mapping>

<servlet-mapping>
 <servlet-name>login</servlet-name>
 <url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet-mapping>
 <servlet-name>menu</servlet-name>
 <url-pattern>/menu</url-pattern>
</servlet-mapping>

</web-app>
